            errorMessage = "Amount should be greater than zero or less than current balance.";
            return;
        }

        // Ensure that the expense does not exceed the current balance
        if (newCashFlow.TransactionType == "expense" && newCashFlow.Amount > currentBalance)
        {
            errorMessage = "Expense amount exceeds the current balance.";
            return;
        }

        // If validation is successful, proceed to add the new cash flow
        await AddNewCashFlow();
    }



